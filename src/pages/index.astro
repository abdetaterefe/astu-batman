---
import Layout from "../layouts/Layout.astro";
---

<Layout title="ASTU SE">
  <section class="py-14">
    <div class="px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
      <h1
        class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl"
      >
        ASTU SE
      </h1>
      <p
        class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48"
      >
        This is the official website of ASTU extension software engineering students.
      </p>

      <div>
        <a
          class="telegram-button h-5 rounded font-bold py-1 px-2 bg-blue-500 text-white"
          href="https://t.me/astubatman"
          target="_blank"
        >
          <span>our telegram group</span>
        </a>
      </div>
    </div>
  </section>
</Layout>
