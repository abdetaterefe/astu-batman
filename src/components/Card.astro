---
export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card">
  <a
    href={href}
    class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100"
  >
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
      {title}
    </h5>
  </a>
</li>
